<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
   android:background="@color/gray"
    >
<TextView
    android:id="@+id/tvPopAddPro"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:textColor="@color/white"
    android:text="新增分类"
    android:gravity="center"
    android:background="@color/bg_nav_bar"
    android:textSize="16sp"
    android:padding="10dp"
    />
    <View
        android:id="@+id/devide1"
        android:layout_below="@+id/tvPopAddPro"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main_gray"
        />
    <com.wyy.pay.view.ClearEditText
        android:id="@+id/editCategory"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:layout_below="@+id/devide1"
        android:hint="请输入商品分类名称"
        android:textSize="16sp"
        app:isCenter="true"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:textColor="@color/bg_nav_bar"
        android:textColorHint="@color/white"
        android:background="@drawable/bg_btn_other"
        android:inputType="text"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginBottom="40dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_below="@+id/editCategory"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:text="取消"
        android:layout_below="@+id/editCategory"
        android:background="@drawable/bg_btn_other"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/btnOK"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:textColor="@color/white"
        android:text="确定"
        android:layout_below="@+id/editCategory"
        android:background="@drawable/bg_btn_normal"
        android:gravity="center"
        android:textSize="16sp"
        />

</LinearLayout>





</RelativeLayout>
