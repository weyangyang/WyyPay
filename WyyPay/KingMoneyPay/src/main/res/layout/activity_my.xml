<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wyy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/nestedScrollView"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <!-- -======== 头像============ -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/yellow"
            >
            <com.wyy.pay.view.WyyCircleImageView
                android:layout_marginTop="57dp"
                android:id="@+id/ivAvater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"
                android:layout_centerHorizontal="true"
                wyy:border="5dp"
                wyy:radius="34dp"
                />

            <TextView
                android:id="@+id/tvShopName"
                android:layout_below="@id/ivAvater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="张三丰店"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
            <LinearLayout
                android:id="@+id/llVerifyAndSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@id/tvShopName"
                android:layout_marginTop="15dp"

                >

                <TextView
                    android:id="@+id/tvNameVerify"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="实名认证"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:background="@color/bg_nav_bar"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tvSign"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="签到有奖"
                    android:layout_centerInParent="true"
                    android:background="@color/bg_nav_bar"
                    android:textSize="14sp"
                    android:textColor="@color/white"

                    />
            </LinearLayout>


            <ImageView
                android:id="@+id/ivShowAuthPic"
                android:layout_alignRight="@id/ivAvater"
                android:layout_alignBottom="@id/ivAvater"
                android:layout_width="wrap_content"
                android:layout_marginBottom="-6dp"
                android:layout_marginRight="-8dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_auth"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_nav_bar"
            ></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/bg_main_gray"
            ></View>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_nav_bar"
            ></View>

        <!-- ==============账号设置============= -->
        <TextView
            android:id="@+id/tvAccountSetting"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawablePadding="14dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="账号设置"
            android:textColor="@color/bg_nav_bar"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_shops_manage"
            android:drawableRight="@drawable/icon_arrow"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-1px"
            android:background="@color/bg_nav_bar"
            ></View>
        <!-- ==============收银员管理============= -->
        <TextView
            android:id="@+id/tvCashierManage"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawablePadding="14dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="收银员管理"
            android:textSize="16sp"
            android:textColor="@color/bg_nav_bar"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_cashier_manage"
            android:drawableRight="@drawable/icon_arrow"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="@color/bg_nav_bar"
            ></View>
        <!-- ==============收银物料============= -->
        <TextView
            android:id="@+id/tvCashierMateriel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawablePadding="14dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/bg_nav_bar"
            android:text="收银物料"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_cash_feed"
            android:drawableRight="@drawable/icon_arrow"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="@color/bg_nav_bar"
            ></View>
        <!-- ==============交易费率============= -->
        <TextView
            android:id="@+id/tvTransactionCosts"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawablePadding="14dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/bg_nav_bar"
            android:text="交易费率"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_cashier_fee"
            android:drawableRight="@drawable/icon_arrow"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_nav_bar"
            ></View>
        <!-- ==============收银设置============= -->
        <TextView
            android:id="@+id/tvCashierSetting"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawablePadding="14dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/bg_nav_bar"
            android:text="收银设置"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_gray_settings"
            android:drawableRight="@drawable/icon_arrow"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_nav_bar"
            ></View>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/bg_main_gray"
            ></View>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_nav_bar"
            ></View>
        <!-- ==============评价我们============= -->
        <TextView
            android:id="@+id/tvEvaluateUs"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawablePadding="14dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/bg_nav_bar"
            android:text="评价我们"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_evaluate_us"
            android:drawableRight="@drawable/icon_arrow"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="@color/bg_nav_bar"
            ></View>
        <!-- ==============意见反馈============= -->
        <TextView
            android:id="@+id/tvFeedback"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawablePadding="14dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/bg_nav_bar"
            android:text="意见反馈"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_feedback"
            android:drawableRight="@drawable/icon_arrow"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="@color/bg_nav_bar"
            ></View>
        <!-- ==============关于我们============= -->
        <TextView
            android:id="@+id/tvAboutUs"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawablePadding="14dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/bg_nav_bar"
            android:text="关于我们"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_about_us"
            android:drawableRight="@drawable/icon_arrow"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="@color/bg_nav_bar"
            ></View>
        <!-- ==============版本更新============= -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/tvUpdateVersition"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawablePadding="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/bg_nav_bar"
                android:text="版本更新"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_update"

                />


            <TextView
                android:id="@+id/tvNewVersionHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/yellow"
                android:textColor="@color/white"
                android:layout_marginLeft="136dp"
                android:textSize="10sp"
                android:padding="2dp"
                android:visibility="gone"
                android:text="有新版本"
                />
            <TextView
                android:id="@+id/tvVersionNum"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:layout_marginRight="15dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_nav_bar"
                ></View>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/bg_main_gray"
            ></View>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>