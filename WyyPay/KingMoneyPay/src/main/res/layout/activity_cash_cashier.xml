<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_gray">
    >

    <include
        android:id="@+id/navBar"
        layout="@layout/nav_title_bar" />
<RelativeLayout
    android:id="@+id/rlCash"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/navBar"
    android:background="@color/white"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    >
    <TextView
        android:id="@+id/tvMoneyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="应收金额"
        android:textColor="@color/bg_nav_bar"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvMoneySumCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMoneyTitle"
        android:layout_marginTop="10dp"
       android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:maxLength="12"
        android:text="￥15.00"
        android:gravity="center"
        android:textColor="@color/yellow"
        android:textSize="30sp"
        android:textStyle="bold" />
    <View
        android:id="@+id/viewDevide1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tvMoneySumCount"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/bg_main_gray" />
    <TextView
        android:id="@+id/tvShishou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/viewDevide1"
        android:text="实收金额"
        android:layout_marginLeft="20dp"
        android:textColor="@color/bg_nav_bar"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tvShishouMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/viewDevide1"
        android:layout_alignParentRight="true"
        android:text="￥0.00"
        android:layout_marginLeft="20dp"
        android:textColor="@color/bg_nav_bar"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textSize="20sp" />
    <View
        android:id="@+id/viewDevide2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/tvShishouMoney"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/bg_main_gray" />
    <TextView
        android:id="@+id/tvZhaoZero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/viewDevide2"
        android:text="找零金额"
        android:layout_marginLeft="20dp"
        android:textColor="@color/bg_nav_bar"
        android:layout_marginBottom="10dp"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tvZhaoZeroMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/viewDevide2"
        android:layout_alignParentRight="true"
        android:text="￥0.00"
        android:layout_marginLeft="20dp"
        android:textColor="@color/gray"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textSize="20sp" />

</RelativeLayout>


    <View
        android:id="@+id/viewDevideTop"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rlCash"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/bg_main_gray" />




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/gray"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="1dp"
        android:layout_below="@+id/viewDevideTop"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp"
            android:layout_height="fill_parent" >

            <TextView
                android:tag="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:textColor="@color/text_cashier_num"
                android:textStyle="bold"
                android:textSize="20sp"

                android:layout_marginRight="1dp"
                android:text="7"

                android:id="@+id/view1" />

            <TextView
                android:id="@+id/view2"
                android:tag="2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:background="@color/white"
                android:textColor="@color/text_cashier_num"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="8"
                />
            <TextView
                android:tag="3"
                android:id="@+id/view3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:textColor="@color/text_cashier_num"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="9"
                />
            <TextView
                android:id="@+id/view4"
                android:tag="4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:text="C"
                android:textColor="@color/text_cashier_num"
                android:textStyle="bold"
                android:textSize="20sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal"
            android:layout_height="match_parent" >
            <TextView
                android:tag="5"
                android:id="@+id/view5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:textColor="@color/text_cashier_num"
                android:textStyle="bold"
                android:textSize="20sp"

                android:text="4"
                />
            <TextView
                android:tag="6"
                android:id="@+id/view6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:textColor="@color/text_cashier_num"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="5"
                />
            <TextView
                android:tag="7"
                android:id="@+id/view7"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:background="@color/white"
                android:textColor="@color/text_cashier_num"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="6"
                />
            <TextView
                android:tag="8"
                android:id="@+id/view8"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:textStyle="bold"
                android:textColor="@color/text_cashier_num"
                android:textSize="30sp"
                android:paddingBottom="10dp"
                android:text="←"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"

            android:orientation="horizontal"
            android:layout_height="fill_parent" >
            <TextView
                android:tag="9"
                android:id="@+id/view9"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:textColor="@color/text_cashier_num"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="1"
                />
            <TextView
                android:tag="10"
                android:id="@+id/view10"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:textColor="@color/text_cashier_num"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@color/white"
                android:text="2"
                />
            <TextView
                android:tag="11"
                android:id="@+id/view11"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:textColor="@color/text_cashier_num"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="3"
                />
            <TextView
                android:tag="12"
                android:id="@+id/view12"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="完成"
                android:background="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="fill_parent" >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:tag="13"
                android:id="@+id/view13"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:background="@color/white"
                android:textColor="@color/text_cashier_num"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="0"
                />
            <TextView
                android:tag="14"
                android:id="@+id/view14"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:textColor="@color/text_cashier_num"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@color/white"
                android:text="."
                />
            <TextView
                android:tag="15"
                android:id="@+id/view15"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:background="@color/white"
                android:textColor="@color/text_cashier_num"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="00"
                />
            <TextView
                android:tag="16"
                android:id="@+id/view16"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center|top"
                android:background="@color/white"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="结算"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
